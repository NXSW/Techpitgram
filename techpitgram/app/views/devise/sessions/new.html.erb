<body>
  <div class="alert alert-denger">
    アカウント登録もしくはサインインしてください
  </div>
  <div class="container">
    <div class="form-wrap">
      <%= image_tag 'app-title.png', size: '200x50', class: 'form-title' %>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>

          <%= f.label :password, class: "form-label" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-input" %>

        <% if devise_mapping.rememberable? %>
          <div class="remember">
            <%= f.check_box :remember_me, class: "remember__check" %>
            <%= f.label :remember_me, class: "remember-label" %>
          </div>
        <% end %>

          <%= f.submit "サインインする", class: "signin-button" %>

      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</body>
