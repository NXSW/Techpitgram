<div class= "like-link" id= "like-link-<%= post.id %>">
  <% if current_user.likes.find_by(post_id: post.id) %>
    <%= link_to unlike_path(post_id: post.id, id: post.likes[0].id), method: :delete, remote: true do %>
      <%= image_tag 'liked-icon.png', size: '35x35'%>
    <% end %>
  <% else %>
    <%= link_to like_path(post.id), method: :post, remote: true do %>
      <%= image_tag 'unlike-icon.png', size: '35x35'%>
    <% end %>
  <% end %>
